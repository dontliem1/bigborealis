{% if navigation.items %}
  <nav class="nav" aria-label="{{ariaLabel}}">
    <ul class="nav__list">
      {% for item in navigation.items %}
        {% set relAttribute = '' %}

        {% if item.rel %}
          {% set relAttribute = ' rel="' + item.rel + '"' %}
        {% endif %}

          {% if page.url !== item.url %}
            <li class="nav__item">
              <a class='nav__link' href="{{ item.url }}"{{ relAttribute | safe }}>{{ item.text }}</a>
            </li>
          {% endif %}
      {% endfor %}
    </ul>
  </nav>
{% endif %}
